@import "normalize.styl"

gris_oscuro = #333333
gris_claro = #818181

body
	font-size 16px
	font-family 'Varela', sans-serif
figure
	margin 0
.container
	padding 1.4rem
	font-size 0
	text-align center
.name
	color gris_oscuro
.author
	color gris_claro
.song
	width 8rem
	font-size 1rem
	display inline-block
	margin-right 1em
	margin-bottom 1em
	text-align left
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

