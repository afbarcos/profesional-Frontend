@import "normalize.styl"
@import "fonts.styl"
@import "nib"

gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #f0f0f0
rojo = #BD255B
a
	text-decoration none
ul 
	margin 0
	padding 0
img
	vertical-align top
body
	font-size 16px
	font-family 'Varela', sans-serif
.header
	height 3.5em
	position relative
	.button-menu
		color #66d3c8
		left .5em
		margin-top -10px
		position absolute
		top 50%
	.menu
		display none
	.title
		font-size 1.1em
		line-height 3.5em
		text-align center
figure
	margin 0
.play
	&.center-text
		border-top: 1px solid #818181;
		padding-top: 1em;
.progress
	position relative
	margin 1em 0
	.min
	.max
		position absolute
		font-size .8em
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		position relative
		height 5px
		background rojo
		border-radius 5px
		width 30%
		animation 10s state linear infinite
	.circle
		height 10px
		width 10px
		border-radius 50%
		background gris_oscuro
		position absolute
		right 0
		top -2px
		animation 1s circle infinite
.container
	padding 1.4rem
	font-size 0
	text-align center
.center-block
	margin 0 auto
.center-text
	text-align center
.actions
	bottom 0
	left 0
	position absolute
	right 0
	text-align right
	background-color rgba(0,0,0,.3)
.action
	color white
	font-size 1.2em
	margin-right .5em
	&last-child
		margin-right 0
	&.gray
		color gris_oscuro
.padding
	padding 1em
.relative
	position relative
.name
	color gris_oscuro
.author
	color gris_claro
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.left
	float left
.right
	float right
.relative
	position relative
.round
	border-radius 50%
.playing
	&.small
		width 20em
		margin 0 auto
.avatar 
	img
		border-radius 50%
input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 2em 0 2em
.search
	margin-right 1em
.icon-search
	position absolute
	left .5em
	top .7em
	color gris_claro
.close-icon
	position absolute
	right .5em
	top .4em
	color gris_claro
	font-size 1.2em
.playlist
	display none
.logo
	display none

/*KEYFRAMES*/

@keyframes state
	from 
		width 0
	to
		width 100%

@keyframes circle
	from
		transform scale(1)
	to
		transform scale(1.5)
		opacity 0
/* MEDIA QUERIES */

@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
	.logo
		display none
@media screen and (min-width:1000px)
	body
		background-color gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 2em
		&.large
			margin 0 auto
			width 62.5em
	.header .menu
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				text-decoration none
				color gris_claro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_oscuro
	.music
		width 32.5em
		float left
	.playlist
		border-left: 1px solid #818181
		display block
		padding: 0 2em
		width: 22em
		.list
			list-style none
		.item
			padding 1em 0
			border-bottom 1px solid gris_oscuro
			a
				font-size 14px
		&.right
			float right
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		border-bottom 1px solid #818181
		background-color white
		padding 1.3em 0
		overflow hidden
		display block
	.wrap
		width 1000px
	.username
		color: #818181;
		line-height: 38px
		margin-left: .5em
		&::after
			content ""
			border-left 7px solid transparent
			border-top 7px solid gris_claro
			border-right 9px solid transparent
			margin-left .4em
			display inline-block
	.container
		clear both
		
	.description
		.name
		.author
			display none
	.play
	.center-box
		border-top none


